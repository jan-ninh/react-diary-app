    if (
      !formData.title.trim() ||
      !formData.date.trim() ||
      !formData.imageUrl.trim() ||
      !formData.content.trim()
    ) {
      alert("Bitte alle Felder ausfÃ¼llen.");
      return false;
    }

    const newEntry = {
      id: crypto.randomUUID(),
      ...formData,
    };

    setEntries((prev) => [...prev, newEntry]);
    return true;
  };
}
